@model IEnumerable<UCP1_PAW_006_A.Models.DetailAlbum>

@{
    ViewData["Title"] = "Index";
}

<h1>Detail Album</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Jenis Album")
            </th>
            <th>
                @Html.DisplayName("Harga Album")
            </th>
            <th>
                @Html.DisplayName("Pajak Album")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JenisAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HargaAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PajakAlbum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAlbum"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdAlbum"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdAlbum"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
