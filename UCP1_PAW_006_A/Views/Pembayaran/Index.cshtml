@model IEnumerable<UCP1_PAW_006_A.Models.Pembayaran>

@{
    ViewData["Title"] = "Index";
}

<h1>Pembayaran</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tanggal Pembayaran")
            </th>
            <th>
                @Html.DisplayName("Jenis Pembayaran")
            </th>
            <th>
                @Html.DisplayName("Total Harga")
            </th>
            <th>
                @Html.DisplayName("Bukti Pembayaran")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TanggalPembayaran)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JenisPembayaran)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHarga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuktiPembayaran)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPembayaran"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPembayaran"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPembayaran"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
