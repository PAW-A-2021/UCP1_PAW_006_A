@model IEnumerable<UCP1_PAW_006_A.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Customer</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama")
            </th>
            <th>
                @Html.DisplayName("No Hp")
            </th>
            <th>
                @Html.DisplayName("Alamat Lengkap")
            </th>
            <th>
                @Html.DisplayName("Id Album")
            </th>
            <th>
                @Html.DisplayName("Id Pembayaran")
            </th>
            <th>
                @Html.DisplayName("Id Pemesanan")
            </th>
            <th>
                @Html.DisplayName("No Resi")
            </th>
            <th>
                @Html.DisplayName("Username")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlamatLengkap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAlbumNavigation.IdAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPembayaranNavigation.IdPembayaran)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPemesananNavigation.IdPemesanan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoResiNavigation.NoResi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCustomer"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdCustomer"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdCustomer"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
