@model IEnumerable<UCP1_PAW_006_A.Models.Pemesanan>

@{
    ViewData["Title"] = "Index";
}

<h1>Pemesanan</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tanggal Pemesanan")
            </th>
            <th>
                @Html.DisplayName("Total Harga")
            </th>
            <th>
                @Html.DisplayName("Jenis Album")
            </th>
            <th>
                @Html.DisplayName("Jumlah Album")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TanggalPemesanan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHarga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JenisAlbum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JumlahAlbum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPemesanan"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.IdPemesanan"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdPemesanan"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
